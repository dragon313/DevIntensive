<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/drawer_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@drawable/header_bg"
                android:paddingBottom="@dimen/margin_8"
                android:paddingLeft="@dimen/margin_16"
                android:paddingRight="@dimen/margin_16"
                android:paddingTop="@dimen/margin_24">


    <ImageView
        android:id="@+id/user_rounded_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_gravity="center"
        android:src="@drawable/user_photo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif_medium"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal_14"/>

        <TextView
            android:id="@+id/user_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/email"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal_14"/>
    </LinearLayout>

</RelativeLayout>