<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/drawer_relative_layout"
                style="@style/header_relative_layout">


    <ImageView
        android:id="@+id/user_rounded_avatar"
        style="@style/header_avatar_image"
        android:src="@drawable/user_photo"/>

    <LinearLayout
        style="@style/header_avatar_linear_layout">

        <TextView
            android:id="@+id/user_name_txt"
            style="@style/header_text_view.user_name"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/user_email_txt"
            style="@style/header_text_view.user_email"
            android:text="@string/email"/>
    </LinearLayout>

</RelativeLayout>