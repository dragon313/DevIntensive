<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@mipmap/nav_header_bg"
                android:paddingBottom="@dimen/spacing_small_8"
                android:paddingLeft="@dimen/spacing_normal_16"
                android:paddingRight="@dimen/spacing_normal_16"
                android:paddingTop="@dimen/spacing_medial_24">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/rounded_avatar"
        android:layout_height="@dimen/rounded_avatar"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/user_photo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_text"
            style="@style/standard_size_mw"
            android:fontFamily="sans-serif-medium"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal_14"/>

        <TextView
            android:id="@+id/user_email_text"
            style="@style/standard_size_mw"
            android:fontFamily="sans-serif"
            android:text="@string/profile_mail"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal_14"/>
    </LinearLayout>
</RelativeLayout>