<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="statusBar">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">@dimen/score_bar_size_112</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/grey</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/spacing_half_normal_28</item>
        <item name="android:paddingTop">@dimen/spacing_half_normal_28</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
    </style>

    <style name="statusText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="relativeStatusBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="verticalDivider">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:layout_marginRight">@dimen/margin_8</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="horizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="main_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="inner_item">
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_32</item>
        <item name="android:layout_marginRight">@dimen/margin_16</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="inner_item.about" parent="inner_item">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="drawer_layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="coordinator_layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="app_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="collapsing_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="user_photo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/profile_image_size</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:theme">@style/AppTheme.PopupOverlay</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="main_scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="main_scroll_view.inner_layout" parent="main_scroll_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="fab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/fab_right_space</item>
    </style>

    <style name="navigation_view">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="header_relative_layout">
        <item name="android:layout_height">172dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/header_bg</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/margin_24</item>
    </style>

    <style name="header_avatar_image">
        <item name="android:layout_height">@dimen/rounded_avatar</item>
        <item name="android:layout_width">@dimen/rounded_avatar</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="header_avatar_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="header_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
    </style>

    <style name="header_text_view.user_name" parent="header_text_view">
        <item name="android:fontFamily">sans-serif_medium</item>
    </style>

    <style name="header_text_view.user_email" parent="header_text_view">
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
